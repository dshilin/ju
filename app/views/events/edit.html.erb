<h1>Изменить событие</h1>
<% form_for :event, @event, :url => event_path, :html => { :multipart => true, :method => :put } do |f| %>
  <%= f.error_messages %>
  <p>Путь к фото<br/>
  	<%= f.file_field(:photo) %>
  </p>

  <p>Укажите название события<br/>
  	<%= f.text_field(:name) %>
  </p>

  <p>Укажите описание события<br/>
  	<%= f.text_area(:description) %>
  </p>

  <p>Укажите время проведения события<br/>
    <%= f.text_field(:actual_time) %>
  </p>
  
  <p>
    <%= f.submit "Изменить" %>
  </p>
<% end %>

<%= link_to 'Назад', events_path %>
