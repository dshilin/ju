<h1>Добавить событие</h1>

<% form_for :event, :url => events_path, :html => { :multipart => true} do |f| %>

  <%= f.error_messages %>

  <p>Путь к фото<br/>
    <%= f.file_field(:photo) %>
  </p>

  <p>Укажите название события<br/>
    <%= f.text_field(:name) %>
  </p>

  <p>Укажите описание события<br/>
    <%= f.text_area(:description) %>
  </p>

  <p>Укажите время проведения события<br/>
    <%= f.text_field(:actual_time) %>
  </p>

  <p>
    <%= f.submit "Добавить" %>
  </p>
<% end %>

<%= link_to 'Назад', events_path %>