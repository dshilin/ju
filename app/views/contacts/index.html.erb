<div id="mainphoto">
  <%= image_tag('contacts.jpg') %>
</div>
<div class="announce_name">
  НАШИ КООРДИНАТЫ
</div>
<div id="announce_desc_acc">
<% for contact in @contacts %>
  <%= contact.description %><br />
<% end %>
</div>
<% if logged_in? %>
<div class='admtext'>
	<% if History.count.zero? %>
		<%= link_to 'Добавить текст на страницу История', new_contact_path %>
	<% else %>
		<%= link_to 'Изменить текст на странице История', edit_contact_path(contact) %> |
		<%= link_to 'Удалить текст со страницы История', contact, :confirm => 'Вы уверены?', :method => :delete %>
	<% end %>
</div>
<%end%>